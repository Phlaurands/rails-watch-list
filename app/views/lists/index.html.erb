<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "http://pngimg.com/uploads/popcorn/popcorn_PNG21.png" %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "My list", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
         <%= link_to "New list", new_list_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://morningmovieclub.com/wp-content/uploads/2016/01/mmc-subscribe-banner.jpg);">
  <div class="container">
    <h1>Save any kind of movies!</h1>
    <%= link_to "Create a list", new_list_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="container lists">
  <h1>My lists</h1>
    <div class="row">
      
      <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <a class="text-decoration-none" href="/lists/1">
          <div class="card-category">
            <%= list.name %>
          </div>
        </a>
      </div>
      <% end %>
    </div> 
</div>
